<%
# NAME # CATEGORY # DUE # COMPLETE?
%>
<tr>
  <td>
    <%= link_to "#{name}", task_path(id) %>
  </td>
  <td>
    TBD
  </td>
  <td>
    <% if time_until <= 0 %>
      PAST DUE
    <% else %>
      <%= distance_of_time_in_words(time_until) %>
    <% end %>
  </td>
  <td>
    <% if completion %>
    Yes
    <% else %>
    No
    <% end %>
  </td>
  <td>
    <%= link_to 'Edit', edit_task_path(id) %> |

    <% if completion %>
        <%= link_to 'Mark Uncomplete', update_status_path(id: id, status: false), method: :put %>
    <% else %>
        <%= link_to 'Mark Complete', update_status_path(id: id, status: true), method: :put %>
    <% end %>



  </td>
</tr>