<div class="container">

  <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title">Sign Up</div>

      </div>
      <div class="panel-body" >
        <%= form_for(resource, as: resource_name,
                     url: registration_path(resource_name),
                     :html => {:class => 'form-horizontal', :role => 'form'}) do |f| %>
            <%= devise_error_messages! %>

          <div id="signupalert" style="display:none" class="alert alert-danger">
            <p>Error:</p>
            <span></span>
          </div>


          <div class="form-group">
            <%= f.label :first_name, class: 'control-label col-md-3' %>
            <div class="col-md-9">
              <%= f.text_field :first_name, autofocus: true, class: 'form-control', placeholder: 'John' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :last_name, class: 'control-label col-md-3' %>
            <div class="col-md-9">
              <%= f.text_field :last_name, class: 'form-control', placeholder: 'Doe' %>
            </div>
          </div>

          <div class="form-group">

            <%= f.label :email, class: 'col-md-3 control-label' %>
            <div class="col-md-9">
              <%= f.email_field :email, class: 'form-control', placeholder: 'Email Address' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password, class: 'control-label col-md-3' %>
            <div class="col-md-9">
              <%= f.password_field :password,
                    autocomplete: 'off',
                    class: 'form-control',
                    placeholder: "Password (min. #{@minimum_password_length} characters)" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :confirm, class: 'control-label col-md-3' %>
            <div class="col-md-9">
              <%= f.password_field :password_confirmation,
                    class: 'form-control',
                    autocomplete: 'off',
                    placeholder: 'Password' %>
            </div>
          </div>

          <div class="form-group">
            <!-- Button -->
            <div class="col-md-offset-3 col-md-9">
              <%= f.submit "Sign up", class: 'btn btn-info' %>
              <span style="margin-left:8px;">or Sign In</span>
            </div>
          </div>



        <% end %>
      </div>
    </div>




  </div>
</div>
    